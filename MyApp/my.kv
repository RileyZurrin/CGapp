<SmoothButton@Button>:
    background_normal: ""
    background_color: (0,0,0,0)
    back_color: (0,0,0,1)
    border_radius: 18
    color: self.back_color
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0],self.pos[1],self.size[0], self.size[1], self.border_radius)
            width: 2



<MainWindow>:
    name: "main"

    FloatLayout:

        Label:
            font_name: 'Asana-Math.otf'
            text: "Clebsch-Gordon Coefficients"
            pos_hint: {"right":1,"top":1}
            size_hint: 1, 0.1
            font_size: self.width*0.07
            color: (0.9, 0.9, 0.91, 1)
            canvas.before:
                Color:
                    rgba: (0.176,0.243,0.384, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        SmoothButton:
            id: top_button
            pos_hint: {"x":0.15,"top":0.75}
            size_hint: 0.7, 0.2
            font_size: self.width*.07
            font_name: 'Asana-Math.otf'
            text: "| J M j\u2081 j\u2082 \u27E9 = \u03A3 C | j\u2081 j\u2082 m\u2081 m\u2082 \u27E9  "
            back_color: (0.176,0.243,0.384, 1)
            on_press:
                root.topChange(self)
            on_release:
                root.manager.transition.direction = "left"
                root.topBtn(self)



        SmoothButton:
            id: bot_button
            pos_hint: {"x":0.15,"top":0.35}
            size_hint: 0.7, 0.2
            font_size: self.width*.07
            font_name: 'Asana-Math.otf'
            text: "| j\u2081 j\u2082 m\u2081 m\u2082 \u27E9 = \u03A3 C | J M j\u2081 j\u2082 \u27E9  "
            back_color: (0.176,0.243,0.384, 1)
